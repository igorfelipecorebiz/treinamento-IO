{
  "store.home": {
    "blocks": [
      "slider-layout#home",
      "__fold__.experimentalLazyAssets",
      "rich-text#shelf-title",
      "flex-layout.row#shelf",
      "flex-layout.row#newsletter-form"
    ]
  },

  "slider-layout#home": {
    "children": ["info-card#home1", "info-card#home2", "info-card#home3", "info-card#home4"],
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "showPaginationDots": "always",
      "showNavigationArrows": "never",
      "autoplay": {
        "timeout": 7000,
        "stopOnHover": true
      }
    }
  },

  "info-card#home1": {
    "props": {
      "isFullModeStyle": true,
      "imageUrl": "assets/banner.jpg",
      "headline": "Olá, o que você está buscando?",
      "subhead": "Criar ou migrar seu e-commerce?",
      "textAlignment": "center",
      "textPosition": "left",
      "blockClass": "info-card-home"
    }
  },
  "info-card#home2": {
    "props": {
      "isFullModeStyle": true,
      "imageUrl": "assets/banner.jpg",
      "headline": "Olá, o que você está buscando?",
      "subhead": "Criar ou migrar seu e-commerce?",
      "textColor": "white",
      "callToActionMode": "none",
      "textAlignment": "center",
      "textPosition": "left",
      "blockClass": "info-card-home"
    }
  },
  "info-card#home3": {
    "props": {
      "isFullModeStyle": true,
      "imageUrl": "assets/banner.jpg",
      "headline": "Olá, o que você está buscando?",
      "subhead": "Criar ou migrar seu e-commerce?",
      "textAlignment": "center",
      "textPosition": "left",
      "blockClass": "info-card-home"
    }
  },
  "info-card#home4": {
    "props": {
      "isFullModeStyle": true,
      "imageUrl": "assets/banner.jpg",
      "headline": "Olá, o que você está buscando?",
      "subhead": "Criar ou migrar seu e-commerce?",
      "textAlignment": "center",
      "textPosition": "left",
      "blockClass": "info-card-home"
    }
  },

  "rich-text#shelf-title": {
    "props": {
      "text": "## Mais Vendidos",
      "blockClass": "shelfTitle",
      "textPosition": "left"
    }
  },
  "flex-layout.row#shelf": {
    "children": ["list-context.product-list#demo1"]
  },
  "list-context.product-list#demo1": {
    "blocks": ["product-summary.shelf"],
    "children": ["slider-layout#demo-products"],
    "props": {
      "orderBy": "OrderByTopSaleDESC"
    }
  },
  "slider-layout#demo-products": {
    "props": {
      "itemsPerPage": {
        "desktop": 5,
        "tablet": 3,
        "phone": 1
      },
      "infinite": true,
      "fullWidth": false,
      "blockClass": "shelf"
    }
  },

  "flex-layout.row#newsletter-form": {
    "children": ["newsletter-form"],
    "props": {
      "blockClass": "newsletterForm"
    }
  },
  "newsletter-form": {
    "children": [
      "rich-text#newsletterLabel",
      "newsletter-input-name",
      "newsletter-input-email",
      "newsletter-submit"
    ]
  },
  "rich-text#newsletterLabel": {
    "props": {
      "text": "**Participe de nossas news com promoções e novidades!**",
      "blockClass": "question"
    }
  },
  "newsletter-input-name": {
    "props": {
      "placeholderText": "Digite seu nome"
    }
  },
  "newsletter-input-email": {
    "props": {
      "placeholderText": "Digite seu email"
    }
  },
  "newsletter-submit": {
    "props": {
      "submitButtonLabel": "Eu quero!"
    }
  },

  "rich-text#question": {
    "props": {
      "text": "**This is an example store built using the VTEX platform.\nWant to know more?**",
      "blockClass": "question"
    }
  },

  "rich-text#link": {
    "props": {
      "text": "\n**Reach us at**\nwww.vtex.com.br",
      "blockClass": "link"
    }
  }
}
